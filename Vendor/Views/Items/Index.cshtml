@using Vendor.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Vendor</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>Vendor</h1>
    @if (Model.Count == 0)
    {
    <p>There are no items on the list.</p>
    }
<ul>
    @foreach (Item item in Model )
    {  
        <li> @item.getDescription()</li>
    }
  
</ul>
<a href="/items/new">Add New Item</a>
<form action="/items/delete" method="post">
    <button type="submit" class="btn btn-info" name="button">Clear</button>
</form>
<form action="/items/find" method="get">
    <label for="findId">Find Item</label>
    <input id="findId" name="findId" type="number">
    <button type="submit" class="btn btn-info" >Find Item</button>
</form>
</body>
</html>