@using VendorTracker.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Vendor</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>Vendor</h1>
    @if (Model.Count == 0)
    {
    <p>There are no orders on the list</p>
    }
<ul>
    @foreach (Order order in Model )
    {  
        <li> @order.getDescription()</li>
    }
  
</ul>
<a href="/orders/new">Add New Order</a>
<form action="/orders/delete" method="post">
    <button type="submit" class="btn btn-info" name="button">Clear</button>
</form>

</body>
</html>