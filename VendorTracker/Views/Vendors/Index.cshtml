@using VendorTracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Vendor</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>Vendor</h1>
@if (Model.Count == 0)
{
  <p>The List is Empty</p>
}
<ul>
    @foreach (Vendor vendor in Model )
    {
      
        <h3><a href="/vendors/@vendor.Id" >@vendor.getName()</a></h3>
    }
  
</ul>
<a href="/vendors/new">Add New Vendor</a>
<form action="/vendors/delete" method="post">
  <button type="submit" class="btn btn-info" name="button">Clear</button>
</form>

</body>
</html>